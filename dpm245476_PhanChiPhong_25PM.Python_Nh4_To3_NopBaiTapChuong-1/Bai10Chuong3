def factorial(k):
    if k == 0 or k == 1:
        return 1
    else:
        f = 1
        for i in range(2, k + 1):
            f *= i
        return f

x = float(input("Nhập x: "))
n = int(input("Nhập n: "))

s = 0
for i in range(1, n + 1):
    s += (x ** i) / factorial(i)

print(f"Kết quả s({x}, {n}) = {s}")
